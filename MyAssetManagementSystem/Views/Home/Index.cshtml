@{
	ViewData["Title"] = "My Asset Management System";
}

<div class="mdl-grid">
	<div class="mdl-cell mdl-cell--4-col">
		<div class="demo-card-square mdl-card mdl-shadow--2dp">
			<div class="mdl-card__title mdl-card--expand" id="catalog">
				<h2 class="mdl-card__title-text homeLabel">Asset Catalog</h2>
			</div>
			<div class="mdl-card__supproting-text">
				View and Manage Asset
			</div>
			<div class="mdl-card__actions mdl-card--border">
				<a class="mdl-button mdl-button--colored" asp-controller="Catalog" asp-action="Index">
					View Catalog
				</a>
			</div>
		</div>
	</div>

	<div class="mdl-cell mdl-cell--4-col">
		<div class="demo-card-square mdl-card mdl-shadow--2dp">
			<div class="mdl-card__title mdl-card--expand" id="patrons">
				<h2 class="mdl-card__title-text homeLabel">Patrons</h2>
			</div>
			<div class="mdl-card__supproting-text">
				View and Manage Patrons
			</div>
			<div class="mdl-card__actions mdl-card--border">
				<a class="mdl-button mdl-button--colored" asp-controller="Patrons" asp-action="Index">
					View Patrons
				</a>
			</div>
		</div>
	</div>

	<div class="mdl-cell mdl-cell--4-col">
		<div class="demo-card-square mdl-card mdl-shadow--2dp">
			<div class="mdl-card__title mdl-card--expand" id="branches">
				<h2 class="mdl-card__title-text homeLabel">Location</h2>
			</div>
			<div class="mdl-card__supproting-text">
				View and Manage Locations
			</div>
			<div class="mdl-card__actions mdl-card--border">
				<a class="mdl-button mdl-button--colored" asp-controller="Location" asp-action="Index">
					View Location
				</a>
			</div>
		</div>
	</div>
</div>